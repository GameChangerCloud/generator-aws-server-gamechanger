const sqlUtils = {

    /***
    *   Construct all the statements for creating the tables in the database
    */
    getSQLCreateTables = () => {
        let sqlStatements = [];
<% tables.forEach(table => { %>
    sqlStatements.push("CREATE TABLE IF NOT EXISTS \"<%= table.name %>\" (" <%- include('./partials/columns', {columns: table.columns}); %>
        +")");
<% }); %>
        return sqlStatements;
    },

    getSQLTables = () => {
        let sqlTables = [];
<% tables.forEach(table => { %>
        sqlTables.push("<%= table.name %>"");
<% }); %>
        return sqlTables;
    }
}

module.exports = sqlUtils