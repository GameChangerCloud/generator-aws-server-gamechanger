const sqlUtils = {

    /***
    *   Construct all the statements for creating the tables in the database
    */
    getSQLCreateTables : () => {
        let sqlStatements = [];
        <% tables.forEach(table => { -%>
        sqlStatements.push(
            `CREATE TABLE IF NOT EXISTS "<%= table.sqlName %>" (
            <%- include('./partials/columns.ejs', {columns: table.columns}) -%> )`,);
        <% }); -%>
        return sqlStatements;
    },

    getSQLTables : () => {
        let sqlTables = [];
        <% tables.forEach(table => { -%>
            sqlTables.push("<%= table.sqlName %>");
        <% }); -%>
        return sqlTables;
    }
}

module.exports = sqlUtils